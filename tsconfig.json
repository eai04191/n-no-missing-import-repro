{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],

    // Bundler mode
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["scripts/**/*.ts", "scripts/**/*.js", "eslint.config.mjs"]
}
